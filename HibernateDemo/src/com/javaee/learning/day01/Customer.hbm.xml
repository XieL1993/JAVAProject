<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <!-- 建立类与表的映射 -->
    <class name="com.javaee.learning.day01.Customer" table="customer">
        <id name="cid" column="cid">
            <generator class="native"/>
        </id>
        <property name="cusName" column="cusName" length="32"></property>
        <property name="age" column="age"></property>
        <property name="hobby" column="hobby" length="64"></property>
        <property name="description" column="description" length="100"></property>
    </class>
</hibernate-mapping>