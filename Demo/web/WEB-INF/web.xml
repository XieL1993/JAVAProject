<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>hello2</servlet-name>
        <servlet-class>com.javaee.learning.ServletDemo</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>hello2</servlet-name>
        <url-pattern>/hello2</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>demo</servlet-name>
        <servlet-class>com.javaee.learning.ServletDemo2</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>demo</servlet-name>
        <url-pattern>/aaa</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>aaa</servlet-name>
        <servlet-class>com.javaee.learning.ServletDemo3</servlet-class>
        <load-on-startup>2</load-on-startup><!--让Servlet创建实例的时机提前-->
    </servlet>
    <servlet-mapping>
        <servlet-name>aaa</servlet-name>
        <url-pattern>/a12a</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ServletConfigDemo</servlet-name>
        <servlet-class>com.javaee.learning.ServletConfigDemo</servlet-class>
        <init-param>
            <param-name>dept</param-name>
            <param-value>研发部</param-value>
        </init-param>
        <init-param>
            <param-name>description</param-name>
            <param-value>美女</param-value>
        </init-param>
        <load-on-startup>3</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletConfigDemo</servlet-name>
        <url-pattern>/bbb/*</url-pattern>
    </servlet-mapping>
</web-app>